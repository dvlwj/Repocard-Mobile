<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5ssp"
    app:contentPadding="@dimen/_5ssp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_matpel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:text="Mata Pelajaran"
                android:textSize="@dimen/_20ssp"
                android:layout_weight="1"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/text_matpel_score"
                android:textStyle="bold"
                android:textColor="#303030"
                android:layout_margin="@dimen/_5ssp"
                android:textSize="@dimen/_25ssp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:text="PS"
            android:textSize="@dimen/_15ssp"/>
        <LinearLayout
            android:layout_margin="@dimen/_5ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai1"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai 1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai2"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai 2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai3"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai 3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilaiPS"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai PS"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:text="PR"
            android:textSize="@dimen/_15ssp"/>
        <LinearLayout
            android:layout_margin="@dimen/_5ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai4"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai 1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai5"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai 2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai6"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai 3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilaiPR"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai PR"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:text="UH"
            android:textSize="@dimen/_15ssp"/>
        <LinearLayout
            android:layout_margin="@dimen/_5ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai7"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai 7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai8"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Nilai 8"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilaiUH"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textAlignment="center"
                android:text="Nilai UH"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai9"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Nilai 9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nilai10"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Nilai 10"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>